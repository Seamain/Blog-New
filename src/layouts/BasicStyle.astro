---
import Footer from "./Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

interface Props {
  description: string;
  ml?: string;
  canonicalURL?: string;
}

const response = await fetch("https://api.waifu.pics/sfw/waifu");
const imageUrl = await response.json();

const {
  description,
  ml,
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:title" content="Seamain's Blog" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={imageUrl["url"]} />
    <meta property="og:type" content="website" />
    <meta property="og:logo" content="/favicon.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Seamain's Blog" />
    <meta name="twitter:image" content={imageUrl["url"]} />
    <title>Seamain's Blog</title>
  </head>
  <body class={ml + " overflow-x-hidden font-mono"}>
    <slot />
    <Footer />
  </body>
  <SpeedInsights />
</html>
