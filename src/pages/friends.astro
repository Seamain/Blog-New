---
import BasicStyle from "../layouts/BasicStyle.astro";
import { getFriend } from "../api/Friend";
import Navbar from "../components/Navbar.astro";

const friends = await getFriend();
---

<BasicStyle title="Firends" description="Firends Page">
  <div
    class="flex flex-col items-center bg-gradient-to-b from-white via-slate-50"
  >
    <Navbar />

    <section class="mt-14 w-full max-w-4xl px-6 text-center">
      <p class="text-xs uppercase tracking-[0.4em] text-slate-400">Friends</p>
      <h1 class="mt-4 text-4xl font-semibold text-slate-900">我的朋友们</h1>
      <p class="mt-4 text-lg text-slate-600">
        记录那些我欣赏的创造者与伙伴，点进他们的世界看看吧。
      </p>
    </section>

    <section class="mt-10 w-full max-w-5xl px-6 pb-16">
      <div class="grid gap-6 grid-cols-2 sm:grid-cols-1 md:grid-cols-2">
        {
          friends.data?.map((friend) => (
            <a
              href={friend.links}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative overflow-hidden rounded-3xl border border-slate-100 bg-white/90 p-6 shadow-md shadow-slate-200/60 transition hover:-translate-y-1 hover:border-slate-200 hover:shadow-xl"
            >
              <div
                class="absolute inset-x-6 -top-6 h-32 rounded-3xl bg-slate-50 opacity-0 blur-3xl transition group-hover:opacity-80"
                aria-hidden="true"
              />
              <div class="relative flex h-full flex-col gap-4">
                <div>
                  <p class="text-xs uppercase tracking-[0.3em] text-slate-400">
                    Friend
                  </p>
                  <h2 class="mt-2 text-2xl font-semibold text-slate-900">
                    {friend.name}
                  </h2>
                </div>
                <p class="text-base text-slate-600 line-clamp-3">
                  {friend.descriptions}
                </p>
                <span class="mt-auto inline-flex items-center text-sm font-semibold text-indigo-600">
                  访问他们
                  <svg
                    class="ml-2 h-4 w-4 transition group-hover:translate-x-1"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </section>
  </div>
</BasicStyle>
